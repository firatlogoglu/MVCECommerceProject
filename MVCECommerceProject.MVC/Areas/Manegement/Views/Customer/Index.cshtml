@model IEnumerable<MVCECommerceProject.MODEL.Entities.AppUser>
@{
    ViewBag.Title = "Müşteriler";
    Layout = "~/Areas/Manegement/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
        @Html.ActionLink("Yeni Müşteri Ekle", "Create", null, new { @class = "pull-right-mycss" })
    </div>
    <div class="card-body">
        @Html.Partial("PartialViews/Messages/_ErrorMsg")
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SurName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TCNO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BirthDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BirthPlace)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BloodType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaritalState)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Role)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>Detay | Düzenle | Sil | Sifreyi Sıfırla</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SurName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TCNO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BirthDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BirthPlace)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BloodType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaritalState)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Role)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>Detay | Düzenle | Sil | Sifreyi Sıfırla</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img class="img-sm-mycss"
                                     src="@item.ImagePath">
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "Customer", new { area = "Manegement", id = item.ID })">
                                    @item.Name
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "Customer", new { area = "Manegement", id = item.ID })">
                                    @item.SurName
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TCNO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BirthDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BirthPlace)
                            </td>
                            @{ if (item.BloodType == MVCECommerceProject.MODEL.Enums.Person.BloodType.AB_Negative)
                                {
                                    <td>AB Rh-</td>
                                }
                                else if (item.BloodType == MVCECommerceProject.MODEL.Enums.Person.BloodType.AB_Positive)
                                {
                                    <td>AB Rh+</td>
                                }
                                else if (item.BloodType == MVCECommerceProject.MODEL.Enums.Person.BloodType.A_Negative)
                                {
                                    <td>A Rh-</td>
                                }
                                else if (item.BloodType == MVCECommerceProject.MODEL.Enums.Person.BloodType.A_Positive)
                                {
                                    <td>A Rh+</td>
                                }
                                else if (item.BloodType == MVCECommerceProject.MODEL.Enums.Person.BloodType.B_Negative)
                                {
                                    <td>B Rh-</td>
                                }
                                else if (item.BloodType == MVCECommerceProject.MODEL.Enums.Person.BloodType.B_Positive)
                                {
                                    <td>B Rh+</td>
                                }
                                else if (item.BloodType == MVCECommerceProject.MODEL.Enums.Person.BloodType.O_Negative)
                                {
                                    <td>0 Rh-</td>
                                }
                                else if (item.BloodType == MVCECommerceProject.MODEL.Enums.Person.BloodType.O_Positive)
                                {
                                    <td>0 Rh+</td>
                                }
                            }

                            @{ if (item.MaritalState == MVCECommerceProject.MODEL.Enums.Person.MaritalState.Married)
                                {
                                    <td>Evli</td>
                                }
                                else if (item.MaritalState == MVCECommerceProject.MODEL.Enums.Person.MaritalState.Single)
                                {
                                    <td>Bekar</td>
                                }
                                else if (item.MaritalState == MVCECommerceProject.MODEL.Enums.Person.MaritalState.Widowed)
                                {
                                    <td>Dul</td>
                                }
                                else if (item.MaritalState == MVCECommerceProject.MODEL.Enums.Person.MaritalState.Divorce)
                                {
                                    <td>Boşanmış</td>
                                }
                            }

                            @{ if (item.Gender == MVCECommerceProject.MODEL.Enums.Person.Gender.Female)
                                {
                                    <td>Kadın</td>
                                }
                                else if (item.Gender == MVCECommerceProject.MODEL.Enums.Person.Gender.Male)
                                {
                                    <td>Erkek</td>
                                }
                            }

                            @{ if (item.Role == MVCECommerceProject.MODEL.Enums.Role.Customer)
                                {
                                    <td>Sadece Müşteri</td>
                                }
                                else if (item.Role == MVCECommerceProject.MODEL.Enums.Role.Seller_Customer)
                                {
                                    <td>Müşteri-Satıcı</td>
                                }
                                else if (item.Role == MVCECommerceProject.MODEL.Enums.Role.Admin)
                                {
                                    <td>Yönetici</td>
                                }
                                else if (item.Role == MVCECommerceProject.MODEL.Enums.Role.Banned)
                                {
                                    <td>Yasaklı</td>
                                }
                                else if (item.Role == MVCECommerceProject.MODEL.Enums.Role.Member)
                                {
                                    <td>Member</td>
                                }
                            }

                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.ActionLink("Detay", "Details", new { id = item.ID }) |
                                @Html.ActionLink("Düzenle", "Edit", new { id = item.ID }) |
                                @Html.ActionLink("Sil", "Delete", new { id = item.ID }) |
                                @Html.ActionLink("Şifreyi Sıfırla", "ResetPassword", new { id = item.ID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>