@model MVCECommerceProject.MODEL.Entities.Product
@{
    ViewBag.Title = "Ürün";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@Model.ProductName @ViewBag.Tile</h6>
        @Html.ActionLink("Tüm Ürünler", "Index", "Product", null, new { @class = "pull-right-mycss" })
    </div>
    <div class="card-body">
        @Html.Partial("PartialViews/Messages/_ErrorMsg")
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubCategory.Category.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubCategory.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitsInStock)
                        </th>
                        <th>
                            Satıcı
                        </th>
                        <th>
                            Sepete Ekle | Hemen Satın Al
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubCategory.Category.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubCategory.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitsInStock)
                        </th>
                        <th>
                            Satıcı
                        </th>
                        <th>
                            Sepete Ekle | Hemen Satın Al
                        </th>
                    </tr>
                </tfoot>
                <tbody>

                    <tr>
                        <td>
                            <img class="img-sm-mycss"
                                 src="@Model.ImagePath">
                        </td>
                        <td>
                            <a href="@Url.Action("Details", "Product", new { area = "", id = Model.ID })">
                                @Model.ProductName
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("FindCategoryProducts", "Product", new { area = "", id = Model.SubCategory.CategoryID })">
                                @Model.SubCategory.Category.Name
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("FindSubCategoryProducts", "Product", new { area = "", id = Model.SubCategory.ID })">
                                @Model.SubCategory.Name
                            </a>
                        </td>
                        <td>
                            @Model.UnitPrice
                        </td>
                        <td>
                            @Model.UnitsInStock
                        </td>
                        <td>
                            <a href="@Url.Action("Find", "Sellers", new { area = "", id = Model.SellerID })">
                                @Model.Seller.Name @Model.Seller.SurName
                            </a>
                        </td>
                        <td>
                            @Html.ActionLink("Sepete Ekle", "SepeteEkle", "Buy", new { area = "", id = Model.ID }, new { @class = "" }) |
                            @Html.ActionLink("Hemen Satın Al", "FastBuy", "Buy", new { area = "Customer", id = Model.ID }, new { @class = "" })
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>