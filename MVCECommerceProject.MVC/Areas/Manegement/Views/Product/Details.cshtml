@model MVCECommerceProject.MODEL.Entities.Product
@{
    ViewBag.Title = Model.ProductName + " Detayı";
    Layout = "~/Areas/Manegement/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitsInStock)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubCategory.Category.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubCategory.Name)
                        </th>
                        <th>
                            Satıcı
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedADUsername)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedIP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedADUsername)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedIP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>Düzenle | Sil</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitsInStock)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubCategory.Category.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubCategory.Name)
                        </th>
                        <th>
                            Satıcı
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedADUsername)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedIP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedADUsername)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedIP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>Düzenle | Sil</th>
                    </tr>
                </tfoot>
                <tbody>
                    <tr>
                        <td>
                            <img class="img-sm-mycss"
                                 src="@Model.ImagePath">
                        </td>
                        <td>
                            <a href="@Url.Action("Details", "Product", new { area = "Manegement", id = Model.ID })">
                                @Model.ProductName
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.UnitPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.UnitsInStock)
                        </td>
                        <td>
                            <a href="@Url.Action("Details", "Category", new { area = "Manegement", id = Model.SubCategory.CategoryID })">
                                @Model.SubCategory.Category.Name
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Details", "SubCategory", new { area = "Manegement", id = Model.SubCategory.ID })">
                                @Model.SubCategory.Name
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Details", "Seller", new { area = "Manegement", id = Model.SellerID })">
                                @Model.Seller.Name @Model.Seller.SurName
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.CreatedADUsername)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.CreatedIP)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.CreatedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.ModifiedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.ModifiedADUsername)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.ModifiedIP)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.ModifiedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Status)
                        </td>
                        <td>
                            @Html.ActionLink("Düzenle", "Edit", new { id = Model.ID }) |
                            @Html.ActionLink("Sil", "Delete", new { id = Model.ID })
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Ürün Listesine Geri Dön", "Index") |
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Sil", "Delete", new { id = Model.ID })
<p>