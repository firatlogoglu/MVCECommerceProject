@model IEnumerable<MVCECommerceProject.MODEL.Entities.SubCategory>
@{
    ViewBag.Title = "Kategoriler - Alt Kategoriler";
    Layout = "~/Areas/Seller/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kategoriler</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="_dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                    </tr>
                </tfoot>
                <tbody>

                    @foreach (var item in ViewData["CategoryList"] as IEnumerable<MVCECommerceProject.MODEL.Entities.Category>)
                    {
                        <tr>
                            @if (item.ImagePath == null || item.ImagePath == "1" || item.ImagePath == "2" || item.ImagePath == "3")
                            {
                                <td>
                                    <img src="~/Content/img/login.png" class="img-sm-mycss" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <img src="@item.ImagePath" class="img-sm-mycss" />
                                </td>
                            }

                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Status</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Alt Kategoriler</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tag)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category.Name)
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tag)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category.Name)
                        </th>
                    </tr>
                </tfoot>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            @if (item.ImagePath == null || item.ImagePath == "1" || item.ImagePath == "2" || item.ImagePath == "3")
                            {
                                <td>
                                    <img src="~/Content/img/login.png" class="img-sm-mycss" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <img src="@item.ImagePath" class="img-sm-mycss" />
                                </td>
                            }

                            <td>@item.Name</td>
                            <td>@item.Tag</td>
                            <td>@item.Description</td>
                            <td>@item.Status</td>
                            <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>